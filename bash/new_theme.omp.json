{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
        "os": "#7081d0",
        "closer": "p:os",
        "pink": "#F5C2E7",
        "purple":"#a48cf2",
        "lavender": "#B4BEFE",
        "blue":  "#04d1f9",
        "green":  "#37f499",
        "red":"#f16c75"
  },
  "blocks": [
    {
      "alignment": "left",
      "newline":true,
      "segments": [
        {
          "foreground": "p:purple",
          "style": "plain",
          "template": " \u256d\u2500[",
          "type": "text"
        },
        {
          "foreground": "p:purple",
          "style": "plain",
          "template": "{{.Icon}}",
          "type": "os"
        },
        {
          //"foreground": "p:os",
          "foreground": "p:green",
          "foreground_templates": [
            "{{ if .Root }}p:red{{ else }}p:green{{ end }}"
          ],
          "style": "plain",
          "template": " {{ .UserName }}@{{ .HostName }}",
          "type": "session"
        },
        {
          "foreground": "p:purple",
          "style": "plain",
          "template": "]",
          "type": "text"
        },
        {
          "foreground": "p:blue",
          "properties": {
//            "folder_icon": "..\ue5fe..",
//            "folder_icon": "\uf4d4",
            "folder_icon": "~~",
            "home_icon": "~",
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          //"background": "#37f499",
          "foreground": "#37f499",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#f265b5{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#e43b44{{ end }}",
            "{{ if gt .Ahead 0 }}#f1fc79{{ end }}",
            "{{ if gt .Behind 0 }}#2ce8f5{{ end }}"
          ],
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
//          "trailing_diamond": "<transparent,background>\ue0ba",
 //         "leading_diamond": "<transparent,background>\ue0bc",
          "template": "{{ .UpstreamIcon }} {{ .HEAD }} {{if .BranchStatus }} {{ .BranchStatus }} {{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} | {{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#37f499",
          "style": "plain",
          //"template": "\n",
          //"template": "\u2800",
          "template":"",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 3
}
